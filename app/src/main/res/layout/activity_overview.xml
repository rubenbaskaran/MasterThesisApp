<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout_rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="7"
    tools:context=".Activities.OverviewActivity">

    <ImageView
        android:id="@+id/imageView_patientImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@color/colorPrimaryDark"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="1.5dp"
        android:layout_weight="1"
        android:background="@drawable/results_background"
        android:orientation="vertical"
        android:weightSum="1">

        <EditText
            android:id="@+id/textView_cprNumber"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:background="@null"
            android:gravity="center"
            android:hint="Enter CPR number..."
            android:inputType="number"
            android:maxLength="10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView_gradient"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:maxLength="7"
                android:text="Gradient" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="Health rating" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            style="@style/LeftNavigationButtonStyle"
            android:background="@drawable/button_background"
            android:onClick="backOnClick" />

        <Button
            style="@style/RightNavigationButtonStyle"
            android:background="@drawable/button_background"
            android:onClick="saveOnClick"
            android:text="Save" />

    </LinearLayout>

</LinearLayout>